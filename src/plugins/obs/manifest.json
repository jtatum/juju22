{
  "id": "obs",
  "name": "OBS Studio",
  "version": "0.2.0",
  "author": "Juju22",
  "description": "Streams scene and streaming state changes from OBS Studio and exposes high-level control actions.",
  "main": "index.js",
  "triggers": [
    {
      "id": "scene.changed",
      "name": "Scene Changed",
      "description": "Fires when the active scene updates."
    },
    {
      "id": "stream.started",
      "name": "Stream Started",
      "description": "Fires when broadcasting begins."
    },
    {
      "id": "stream.stopped",
      "name": "Stream Stopped",
      "description": "Fires when broadcasting stops."
    }
  ],
  "actions": [
    {
      "id": "scene.switch",
      "name": "Switch Scene",
      "description": "Switch to a scene by name."
    },
    {
      "id": "stream.start",
      "name": "Start Stream",
      "description": "Begin streaming in OBS."
    },
    {
      "id": "stream.stop",
      "name": "Stop Stream",
      "description": "Stop streaming in OBS."
    },
    {
      "id": "connection.configure",
      "name": "Configure OBS Connection",
      "description": "Persist OBS connection settings."
    },
    {
      "id": "connection.refresh",
      "name": "Reconnect",
      "description": "Reconnect to OBS WebSocket."
    }
  ],
  "dependencies": {
    "obs-websocket-js": "^5.0.3"
  },
  "permissions": ["module:obs-websocket-js"]
}
